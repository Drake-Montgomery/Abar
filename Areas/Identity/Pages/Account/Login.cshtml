<haead>
    <link href="~/css/Login.css" rel="stylesheet" />
</haead>
<main>
    <div class="content">
        <div class="container p-4">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/img/remote.svg" alt="Logging" class="img-fluid">
 
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <p class="mb-4"></p>
                            </div>
                            <form id="account" method="post">
                                <div class="pt-2">
                                    <h3>Entrar</h3>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <label for="">Email</label>
                                <div class="form-group first">
                                    <label asp-for="Input.Email" class="form-label">Digite seu Email</label>
                                    <input asp-for="Input.Email" class="form-control" id="username" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <br>
                                <label for="">Senha</label>
                                <div class="form-group last mb-4">
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="checkbox d-flex mb-5 align-items-center">
                                    <label asp-for="Input.RememberMe" class="form-label mb-0">
                                        <span class="caption">Lembrar Senha</span>
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                    <label class="control  mb-0">
                                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha ?</a>
                                    </label>
                                </div>
                                <input id="login-submit" type="submit" class="btn btn-block btn-primary">Entrar<input />
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
